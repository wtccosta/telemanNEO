<!DOCTYPE html>
<html>

<head th:replace="~{base :: head('GestÃ£o de Agrupadores')}"></head>

<body>
	<nav th:replace="~{base :: menu}"></nav>
	<div class="container" id="app">
		 <p>{{ message }}</p>
  <button v-on:click="reverseMessage">Inverter Mensagem</button>

	</div>

	<script src="https://cdn.jsdelivr.net/npm/vue@2"></script>
	<script>
		var app = new Vue({
			el: '#app',
			data: {
				message: 'OlÃ¡ Vue!'
			},
			methods: {
				reverseMessage: function () {
					this.message = this.message.split('').reverse().join('')
				}
			},
			mounted: {
				reverseMessage()
			}
		})
	</script>



</body>

</html>