package br.gov.ms.corumba.controllers.dto;

import java.io.Serializable;
import java.math.BigDecimal;
import java.util.ArrayList;
import java.util.List;

import javax.validation.constraints.NotBlank;
import javax.validation.constraints.NotNull;

import br.gov.ms.corumba.model.Local;
import br.gov.ms.corumba.model.Produto;
import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Data;
import lombok.NoArgsConstructor;

@Data
@NoArgsConstructor
@AllArgsConstructor
@Builder
public class ProdutoDto implements Serializable {

	private static final long serialVersionUID = 1L;

	@NotBlank
	private String linhaOuRamal;
	@NotNull
	private Local local;
	@NotNull
	private String nomePlanoOperadora;
	@NotNull
	private BigDecimal valuePrecoDoPlano;
	@NotNull
	private String nomeServicoOperadora;
	@NotNull
	private BigDecimal valuePrecoDoServico;
	@NotNull
	private String nomeRoteador;
	@NotNull
	private String valueVelocidadeInternet;
	@NotNull
	private List<Produto> agrupador = new ArrayList<>();
}
