package br.gov.ms.corumba.rest.resources;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.data.domain.Page;
import org.springframework.data.domain.Pageable;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import br.gov.ms.corumba.model.Produto;
import br.gov.ms.corumba.repository.ProdutosRepository;
import br.gov.ms.corumba.rest.resources.dto.assemblers.ProdutosListRestAssembler;

@RestController
@RequestMapping("/api/v1/produtos")
public class ProdutoResource {
	
	@Autowired
	private ProdutosRepository produtoRepository;
	
	@Autowired
	private ProdutosListRestAssembler assembler;
	
	@GetMapping
	public Page<List<Produto>> listAll(Pageable pageable){
		return produtoRepository.findAllPaged(pageable);
	}
	
	@GetMapping("{id}")
	public Produto show(@PathVariable Long id){
		return  produtoRepository.findById(id).orElse(null);
	}
}
