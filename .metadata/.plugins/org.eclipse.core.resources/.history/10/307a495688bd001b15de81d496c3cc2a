package br.gov.ms.corumba.repository;

import java.util.Optional;

import org.springframework.data.domain.Page;
import org.springframework.data.domain.Pageable;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import br.gov.ms.corumba.model.Produto;

@Repository
public interface ProdutosRepository extends JpaRepository<Produto, Long>, CustomProdutoRepository {

	Optional<Produto> findBylinhaOuRamal(String linhaOuRamal);

	Page<Produto> findAll(Pageable pageable);

}
